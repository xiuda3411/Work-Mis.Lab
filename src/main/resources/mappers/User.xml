<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybaits.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.cqupt.mislab.work.dao.UserDao">

<sql id="userPo">
    student_id,user_name,email,role
</sql>

    <insert id="registerUser">
        INSERT work1.user(student_id,user_name, password,email,role)
        VALUES (#{id},#{userName},#{password},#{email},#{role})
    </insert>
    <select id="loginUser" resultType="cn.edu.cqupt.mislab.work.domain.po.UserPo">
        SELECT
          <include refid="userPo"/>
        FROM work1.user
        WHERE student_id = #{id} AND password = #{password}
    </select>
</mapper>